<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.seegeek.cms.domain.Comment">
	<!-- 主机实体对象与数据库字段的映射 -->
	<resultMap type="commentVo" id="commentMap">
		<result column="content" property="content"/>
		<result column="livemediaId" property="livemediaId"/>
		<result column="userId" property="userId"/>
	</resultMap>
	<!-- 查询所有评论信息"-->
	 <select id="getAll" parameterType="map" resultType="com.seegeek.cms.domain.Comment">
	select u.nickname,c.userId,c.content ,c.datetime from comment as c,user as u where  u.id=c.userId and  livemediaId =#{livemediaId}  ORDER BY c.datetime desc 
		  <trim>
			  <if test="Offset != null">
	            limit #{Num} Offset #{Offset}
	            </if>
		</trim>
		
	</select>
	<select id="getCommentByUserId"  resultType="int">
		select count(id)  from comment where livemediaId=#{livemediaId}
	   <trim>
			  <if test="userId != null">
	            and userId=#{userId}
	            </if>
		</trim>
	</select>
		<insert id="addComment" parameterType="map">
		insert into comment(livemediaId,userId,content,datetime)
		values (#{livemediaId},#{userId},#{content},now())
	</insert>
</mapper>